<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>
  <%=f.error_notification %>

  <%=f.input :email %>

  <%= f.hidden_field :reset_password_token %>

  <%= f.input :password, label:"New password", autocomplete: "off", autofocus:"true" %>
    
  <%= f.input :password_confirmation, label:"Confirm new password", autocomplete: "off" %>

  <div class="form-actions">
  	<%= f.submit "Change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
